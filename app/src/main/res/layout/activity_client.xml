<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/mainButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/mainButtons">

            <Button
                android:id="@+id/back_button"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:background="@drawable/back_button"
                android:gravity="bottom" />

            <TextView
                android:id="@+id/titleLabel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:fontFamily="@font/comfortaa"
                android:text="Klient:"
                android:textColor="#000000"
                android:textSize="28sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <Button
                android:id="@+id/hamburger"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:background="@drawable/hamburger"
                android:gravity="end" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginBottom="66dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Imię i nazwisko" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:id="@+id/nameField"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/clientNameEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto"
                        android:text="Jonas Kahnwald"
                        android:inputType="text"
                        android:maxLength="25"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                    <View
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/phoneButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/phone_icon"
                        android:gravity="end"
                        app:layout_constraintEnd_toEndOf="@id/clientField"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/label2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Numer telefonu" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <EditText
                    android:id="@+id/phoneNumberEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="437218123"
                    android:maxLength="12"
                    android:inputType="phone"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@+id/label3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Adres" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <EditText
                    android:id="@+id/addressEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="ul. Zeitstraße 12A, Winden"
                    android:inputType="text"
                    android:maxLength="30"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@+id/label4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Komentarz" />

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <EditText
                    android:id="@+id/commentsEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Przetłuszczające się włosy"
                    android:inputType="text"
                    android:maxLength="30"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp" />

                <Button
                    android:id="@+id/show_visits_button"
                    android:layout_width="330dp"
                    android:layout_height="47dp"
                    android:background="@drawable/orange_button_background"
                    android:text="Wyświetl wizyty"
                    android:textColor="@android:color/background_light"
                    ></Button>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/edit_button"
            android:layout_width="144dp"
            android:layout_height="47dp"
            android:background="@drawable/orange_button_background"
            android:text="edytuj"
            android:textColor="@android:color/background_light"></Button>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="144dp"
            android:layout_height="47dp"
            android:background="@drawable/white_button_background"
            android:text="usuń"
            android:textColor="@color/colorPrimary"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>